// input - given string

void removeConsecutiveDuplicates(char input[]) 
{
   
  int length=0;
  int k=0;
  char arr[1000];
  for(int i=0;input[i]!=0;i++)
{

  length=length+1;

}

 for(int i=0;i<length;i++)
 {
   if(input[i]==input[i+1])
    {
      continue;
    }
    else
    {
      arr[k]=input[i];
      k++;
    }
 }
  
 arr[k]=0;
 for(int j=0;j<=k;j++)
 {
   input[j]=arr[j];
 }
 
}
